{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types", "./custom-types"],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}